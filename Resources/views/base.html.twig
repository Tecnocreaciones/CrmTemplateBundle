    <script type="text/javascript">
        var flashManager = {
            time: "10000",
            danger: function(message,title){
                this.show(message,'error',title,"mp-status-error");
            },
            success: function(message,title){
                this.show(message,'success',title,"mp-status-success");
            },
            warning: function(message,title){
                this.show(message,'warning',title,"mp-status-warning");
            },
            info: function(message,title){
                this.show(message,'info',title,"mp-status-info");
            },
            inline: function(message,icon,title){
                if(!icon){
                    icon = "mp-notification";
                }
                toastr["info"](message,title,{
                    "positionClass": "toast-bottom-left",
                    "containerId": "toast-container-2",
                    "iconClass": 'toast-info '+icon,
                    "closeButton": false,
                });
            },
            show: function(message,type,title,icon){
                if(message != ""){
                    Notify(message,title,'top-right', this.time, type, true,icon);
                }
                {% if app.debug %}
                    console.log("debug show: "+message+" type: "+type);
                {% endif %}
            }
        };
        $(document).ready(function(){
            {% for type, messages in flashes %}
                {% for message in messages %}
                    
                    {% if type == "success" %}
                        flashManager.success("{{ message }}");
                    {% elseif type == "error" %}
                        flashManager.danger("{{ message }}");
                    {% elseif type == "warning" %}
                        flashManager.warning("{{ message }}");
                    {% elseif type == "info" %}
                        flashManager.info("{{ message }}");
                    {% endif%}
                {% endfor %}
            {% endfor %}
        });
    </script>
    {% if app.debug == false %}
        {% block analytics '' %}
    {% endif%}
