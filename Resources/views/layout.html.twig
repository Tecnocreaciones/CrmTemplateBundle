{% extends "TecnocreacionesCrmTemplateBundle::base.html.twig" %}

{% block stylesheet_base %}
    <link href="{{ asset('bundles/tecnocreacionescrmtemplate/template/html/assets/css/weather-icons.min.css') }}" rel="stylesheet" />
{% endblock stylesheet_base %}

{% block body %}
    <!-- Loading Container -->
    <div class="loading-container">
        <div class="loading-progress">
            <div class="rotator">
                <div class="rotator">
                    <div class="rotator colored">
                        <div class="rotator">
                            <div class="rotator colored">
                                <div class="rotator colored"></div>
                                <div class="rotator"></div>
                            </div>
                            <div class="rotator colored"></div>
                        </div>
                        <div class="rotator"></div>
                    </div>
                    <div class="rotator"></div>
                </div>
                <div class="rotator"></div>
            </div>
            <div class="rotator"></div>
        </div>
    </div>
    <!--  /Loading Container -->
    <!-- Navbar -->
    {% block navbar %}
        {% include 'TecnocreacionesCrmTemplateBundle:Template:_navbar.html.twig' %}
    {% endblock navbar %}
    <!-- /Navbar -->
    <!-- Main Container -->
    <div class="main-container container-fluid">
        <!-- Page Container -->
        <div class="page-container">
            <!-- Page Sidebar -->
            <div class="page-sidebar" id="sidebar">
                <!-- Page Sidebar Header-->
                <div class="sidebar-header-wrapper">
                    <input type="text" class="searchinput" />
                    <i class="searchicon fa fa-search"></i>
                    <div class="searchhelper">{{ 'Search Reports, Charts, Emails or Notifications'|trans }}</div>
                </div>
                <!-- /Page Sidebar Header -->
                <!-- Sidebar Menu -->
                {{ knp_menu_render('app.menu.backend.sidebar', {'template': 'TecnocreacionesCrmTemplateBundle::menu.html.twig', 'currentClass': 'active'}) }}
                <!-- /Sidebar Menu -->
            </div>
            <!-- /Page Sidebar -->
            <!-- Page Content -->
            <div class="page-content">
                <!-- Page Breadcrumb -->
                <div class="page-breadcrumbs">
                    {% block breadcrumb %}
                        <ul class="breadcrumb">
                            <li>
                                <i class="fa fa-home"></i>
                                <a href="#">Home</a>
                            </li>
                            <li>
                                <a href="#">More Pages</a>
                            </li>
                            <li class="active">Blank Page</li>
                        </ul>
                    {% endblock breadcrumb %}
                </div>
                <!-- /Page Breadcrumb -->
                <!-- Page Header -->
                <div class="page-header position-relative">
                    <div class="header-title">
                        <h1>
                            {% block headerTitle %}
                                Blank Page
                                <small>
                                    <i class="fa fa-angle-right"></i>
                                    Hello!
                                </small>
                            {% endblock headerTitle %}
                        </h1>
                    </div>
                    <!--Header Buttons-->
                    <div class="header-buttons">
                        {% block headerButtons %}
                            <a class="sidebar-toggler" href="#">
                                <i class="fa fa-arrows-h"></i>
                            </a>
                            <a class="refresh" id="refresh-toggler" href="">
                                <i class="glyphicon glyphicon-refresh"></i>
                            </a>
                            <a class="fullscreen" id="fullscreen-toggler" href="#">
                                <i class="glyphicon glyphicon-fullscreen"></i>
                            </a>
                        {% endblock headerButtons %}
                    </div>
                    <!--Header Buttons End-->
                </div>
                <!-- /Page Header -->
                <!-- Page Body -->
                <div class="page-body">
                    {% block pageBody '' %}
                    <!-- Your Content Goes Here -->
                </div>
                <!-- /Page Body -->
            </div>
            <!-- /Page Content -->
        </div>
        <!-- /Page Container -->
        <!-- Main Container -->

    </div>
{% endblock body %}